                    android:tag="w"
                    android:text="w"
                    android:textColor="@color/branco" />

                <Button
                    android:id="@+id/btnE"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="e"
                    android:text="e"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnR"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="r"
                    android:text="r"
                    android:textColor="@color/branco"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp">

                <Button
                    android:id="@+id/btnT"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="t"
                    android:text="t"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnY"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="y"
                    android:text="y"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnP"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="p"
                    android:text="p"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnI"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="i"
                    android:text="i"

                    android:textColor="@color/branco" />

                <Button
                    android:id="@+id/btnS"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="s"
                    android:text="s"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnD"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="d"
                    android:text="d"
                    android:textColor="@color/branco"


                    />

                <Button
                    android:id="@+id/btnF"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="f"
                    android:text="f"
                    android:textColor="@color/branco"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp">

                <Button
                    android:id="@+id/btnG"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="g"
                    android:text="g"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnH"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="h"
                    android:text="h"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnJ"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="j"
                    android:text="j"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnK"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="k"
                    android:text="k"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnL"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="l"
                    android:text="l"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnZ"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="z"
                    android:text="z"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnX"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="x"
                    android:text="x"
                    android:textColor="@color/branco"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp">

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="c"
                    android:text="c"
                    android:textColor="@color/branco"

                    />

                <Button
                    android:id="@+id/btnB"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="b"
                    android:text="b"
                    android:textColor="@color/branco"


                    />

                <Button
                    android:id="@+id/btnN"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="n"
                    android:text="n"
                    android:textColor="@color/branco" />


                <Button
                    android:id="@+id/btnM"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="m"
                    android:text="m"
                    android:textColor="@color/branco" />

                <Button
                    android:id="@+id/btnO"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="o"
                    android:text="o"
                    android:textColor="@color/branco" />
                />

                <Button
                    android:id="@+id/btnDica"
                    android:layout_width="50sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="dica"
                    android:text="dica"
                    android:textColor="@color/branco" />


                />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acertos: "
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/green"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:id="@+id/txtAcertos"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erros: "
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/red"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:id="@+id/txtErros"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>