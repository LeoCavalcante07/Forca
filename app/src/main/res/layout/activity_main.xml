<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    android:background="@color/azulbb"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPergunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80sp"
            android:gravity="center"
            android:text="Jogo da Forca"
            android:textColor="@color/black"
            android:textSize="23sp" />

        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-50sp"
            >

            <LinearLayout
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0sp"
                    android:text="Dica: " />

                <TextView
                    android:id="@+id/txtDica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/green"

                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chances"
                    android:textColor="@color/black" />
                />

                <TextView
                    android:id="@+id/txtChances"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llForca"
                android:layout_width="230sp"
                android:layout_height="200sp"

                android:background="@drawable/img_forca">

                <ImageView
                    android:id="@+id/bracoD"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="80sp"
                    android:layout_marginTop="90sp"
                    android:background="@drawable/braco_d"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/cabeca"
                    android:layout_width="50sp"
                    android:layout_height="60sp"
                    android:layout_marginLeft="0sp"
                    android:layout_marginTop="80sp"
                    android:background="@drawable/cabeca"

                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/bracoE"
                    android:layout_width="50sp"

                    android:layout_height="50sp"
                    android:layout_marginTop="90sp"
                    android:background="@drawable/braco_e"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/pernaD"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="-120sp"
                    android:layout_marginTop="140sp"
                    android:background="@drawable/perna_d"

                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/pernaE"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="0sp"
                    android:layout_marginTop="140sp"
                    android:background="@drawable/perna_e"
                    android:visibility="invisible"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>






        <LinearLayout
            android:id="@+id/llLetras"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp">

                <Button
                    android:id="@+id/btnU"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="u"
                    android:text="u"
                    android:textColor="@color/branco" />

                <Button
                    android:id="@+id/btnV"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="v"
                    android:text="v"
                    android:textColor="@color/branco" />

                <Button
                    android:id="@+id/btnA"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginRight="5sp"
                    android:background="@color/colorAccent"
                    android:tag="a"
                    android:text="a"
                    android:textColor="@color/branco" />

                <Button
                    android:id="@+id/btnQ"
