<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogo Da Forca"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:textColor="@color/branco"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_forca"
        android:layout_gravity="center"
        android:layout_marginTop="80sp"
        android:id="@+id/imgForca"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Jogo"
            android:background="@color/green"
            android:textColor="@color/branco"
            android:onClick="iniciarJogo"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="10sp"
            android:padding="5sp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ver Regras"
            android:background="@color/green"
            android:textColor="@color/branco"
            android:onClick="abrirRegra"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="10sp"
            android:padding="5sp"


            />


    </LinearLayout>





</LinearLayout>